  // ç›®å½•ç›¸å…³å…ƒç´ 
  const tocToggle = document.querySelector('.mobile-toc-toggle');
  const tocPanel = document.querySelector('.mobile-toc-panel');
  const tocClose = document.querySelector('.mobile-toc-close');
  const tocList = document.getElementById('mobile-toc-list');

  // åˆ‡æ¢èœå•
  function toggleMenu() {
    // å…ˆå…³é—­ç›®å½•é¢æ¿
    closeToc();
    
    const isOpen = menuToggle?.classList.toggle('active');
    menuOverlay?.classList.toggle('active');
    menuToggle?.setAttribute('aria-expanded', String(isOpen));
    menuOverlay?.setAttribute('aria-hidden', String(!isOpen));
    
    // é˜²æ­¢èƒŒæ™¯æ»šåŠ¨
    document.body.style.overflow = isOpen ? 'hidden' : '';
  }

  // å…³é—­èœå•
  function closeMenu() {
    menuToggle?.classList.remove('active');
    menuOverlay?.classList.remove('active');
    menuToggle?.setAttribute('aria-expanded', 'false');
    menuOverlay?.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }

  // åˆ‡æ¢ç›®å½•é¢æ¿
  function toggleToc() {
    // å…ˆå…³é—­å¯¼èˆªèœå•
    closeMenu();
    
    const isOpen = tocPanel?.classList.toggle('active');
    tocToggle?.classList.toggle('active');
    tocToggle?.setAttribute('aria-expanded', String(isOpen));
    tocPanel?.setAttribute('aria-hidden', String(!isOpen));
  }

  // å…³é—­ç›®å½•é¢æ¿
  function closeToc() {
    tocPanel?.classList.remove('active');
    tocToggle?.classList.remove('active');
    tocToggle?.setAttribute('aria-expanded', 'false');
    tocPanel?.setAttribute('aria-hidden', 'true');
  }

  // ç”Ÿæˆç›®å½•
  function generateToc() {
    if (!tocList) return;
    
    // æŸ¥æ‰¾æ–‡ç« ä¸­çš„æ ‡é¢˜
    const article = document.querySelector('article');
    if (!article) {
      tocList.innerHTML = '<li class="mobile-toc-empty">å½“å‰é¡µé¢æ— ç›®å½•</li>';
      return;
    }
    
    const headings = article.querySelectorAll('h1, h2, h3, h4');
    if (headings.length === 0) {
      tocList.innerHTML = '<li class="mobile-toc-empty">å½“å‰é¡µé¢æ— ç›®å½•</li>';
      return;
    }
    
    let html = '';
    headings.forEach((heading, index) => {
      const level = parseInt(heading.tagName.charAt(1));
      const id = heading.id || `heading-${index}`;
      
      // å¦‚æœæ ‡é¢˜æ²¡æœ‰ idï¼Œæ·»åŠ ä¸€ä¸ª
      if (!heading.id) {
        heading.id = id;
      }
      
      const text = heading.textContent?.trim() || '';
      html += `<li><a href="#${id}" class="toc-level-${level}">${text}</a></li>`;
    });
    
    tocList.innerHTML = html;
    
    // ä¸ºç›®å½•é“¾æ¥æ·»åŠ ç‚¹å‡»äº‹ä»¶
    tocList.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.slice(1);
        if (targetId) {
          const target = document.getElementById(targetId);
          if (target) {
            closeToc();
            // å¹³æ»‘æ»šåŠ¨åˆ°ç›®æ ‡ä½ç½®ï¼Œè€ƒè™‘å¯¼èˆªæ é«˜åº¦
            const navHeight = 64;
            const targetPosition = target.getBoundingClientRect().top + window.scrollY - navHeight - 16;
            window.scrollTo({ top: targetPosition, behavior: 'smooth' });
          }
        }
      });
    });
  }

  // é«˜äº®å½“å‰ç« èŠ‚
  function updateActiveSection() {
    if (!tocList) return;
    
    const links = tocList.querySelectorAll('a');
    const headings = Array.from(links).map(link => {
      const id = link.getAttribute('href')?.slice(1);
      return id ? document.getElementById(id) : null;
    }).filter(Boolean);
    
    if (headings.length === 0) return;
    
    const navHeight = 64;
    const scrollY = window.scrollY + navHeight + 50;
    
    let activeIndex = 0;
    headings.forEach((heading, index) => {
      if (heading && heading.offsetTop <= scrollY) {
        activeIndex = index;
      }
    });
    
    links.forEach((link, index) => {
      link.classList.toggle('active', index === activeIndex);
    });
  }

  // ç‚¹å‡»æ±‰å ¡æŒ‰é’®
  menuToggle?.addEventListener('click', toggleMenu);

  // ç‚¹å‡»ç›®å½•æŒ‰é’®
  tocToggle?.addEventListener('click', toggleToc);

  // ç‚¹å‡»ç›®å½•å…³é—­æŒ‰é’®
  tocClose?.addEventListener('click', closeToc);

  // ç‚¹å‡»è¦†ç›–å±‚å…³é—­èœå•
  menuOverlay?.addEventListener('click', (e) => {
    if (e.target === menuOverlay) {
      closeMenu();
    }
  });

  // ç‚¹å‡»å¯¼èˆªé“¾æ¥å…³é—­èœå•
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // ç§»åŠ¨ç«¯ä¸‹æ‹‰èœå•åˆ‡æ¢
  mobileDropdowns.forEach(dropdown => {
    const toggle = dropdown.querySelector('.mobile-dropdown-toggle');
    toggle?.addEventListener('click', (e) => {
      e.preventDefault();
      dropdown.classList.toggle('active');
    });

    // ç‚¹å‡»ä¸‹æ‹‰èœå•é¡¹å…³é—­æ•´ä¸ªèœå•
    const items = dropdown.querySelectorAll('.mobile-dropdown-item');
    items.forEach(item => {
      item.addEventListener('click', closeMenu);
    });
  });

  // ESC é”®å…³é—­èœå•å’Œç›®å½•
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      if (menuOverlay?.classList.contains('active')) {
        closeMenu();
      }
      if (tocPanel?.classList.contains('active')) {
        closeToc();
      }
    }
  });

  // çª—å£å¤§å°å˜åŒ–æ—¶å…³é—­ç§»åŠ¨ç«¯èœå•å’Œç›®å½•
  window.addEventListener('resize', () => {
    if (window.innerWidth > 767) {
      if (menuOverlay?.classList.contains('active')) {
        closeMenu();
      }
      if (tocPanel?.classList.contains('active')) {
        closeToc();
      }
    }
  });

  // æ»šåŠ¨æ—¶æ›´æ–°å½“å‰ç« èŠ‚é«˜äº®
  let scrollTimeout: number;
  window.addEventListener('scroll', () => {
    clearTimeout(scrollTimeout);
    scrollTimeout = window.setTimeout(updateActiveSection, 50);
  });

  // é¡µé¢åŠ è½½å®Œæˆåç”Ÿæˆç›®å½•
  document.addEventListener('DOMContentLoaded', () => {
    generateToc();
    updateActiveSection();
  });

  // å¦‚æœ DOM å·²ç»åŠ è½½å®Œæˆï¼Œç«‹å³ç”Ÿæˆç›®å½•
  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    generateToc();
    updateActiveSection();
  }
</script>
