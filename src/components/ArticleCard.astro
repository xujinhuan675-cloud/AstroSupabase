---
import type { Article } from '../db/schema';

export interface Props {
  article: Article;
}

const { article } = Astro.props;
const { id, title, createdAt, authorId, content } = article;
const excerpt = content.substring(0, 150) + '...';
const date = new Date(createdAt).toLocaleDateString('zh-CN');
---

<article class="article-card rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300" style="background-color: transparent;">
  <div class="p-6">
    <div class="flex justify-between items-center mb-2 text-sm" style="color: var(--gray);">
      <span>{authorId}</span>
      <div>{date}</div>
    </div>
    <h2 class="text-xl font-bold mb-2 transition-colors" style="color: var(--dark);">
      <a href={`/articles/${id}`} class="block hover:opacity-80">
        {title}
      </a>
    </h2>
    <p class="mb-4" style="color: var(--gray);">{excerpt}</p>
    <a 
      href={`/articles/${id}`}
      class="inline-flex items-center font-medium hover:opacity-80"
      style="color: var(--secondary);"
    >
      阅读更多
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>

<style>
  /* 移除被 popover 脚本自动标记的 internal 链接在卡片内的背景样式 */
  .article-card a.internal {
    background: transparent !important;
    padding: 0 !important;
    border-radius: 0 !important;
  }

  /* 保持标题与按钮的颜色风格一致 */
  .article-card h2 a.internal {
    color: var(--dark);
  }

  .article-card a.internal:hover {
    color: var(--secondary);
  }
</style>
