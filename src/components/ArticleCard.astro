---
/**
 * 文章卡片组件 - 移动端优化版
 * 响应式布局，移动端单列显示
 */
import type { Article } from '../db/schema';

export interface Props {
  article: Article;
}

const { article } = Astro.props;
const { id, title, createdAt, authorId, content } = article;
const excerpt = content.substring(0, 150) + '...';
const date = new Date(createdAt).toLocaleDateString('zh-CN');
---

<article class="article-card">
  <div class="card-content">
    <div class="card-meta">
      <span class="author">{authorId}</span>
      <span class="date">{date}</span>
    </div>
    <h2 class="card-title">
      <a href={`/articles/${id}`}>
        {title}
      </a>
    </h2>
    <p class="card-excerpt">{excerpt}</p>
    <a href={`/articles/${id}`} class="read-more">
      阅读更多
      <svg class="arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>

<style>
  .article-card {
    background: var(--light);
    border-radius: 0.75rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    transition: box-shadow 0.3s ease, transform 0.2s ease;
  }

  .article-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  /* 触摸反馈 */
  @media (hover: none) {
    .article-card:active {
      transform: scale(0.98);
    }
  }

  .card-content {
    padding: 1.5rem;
  }

  /* 移动端内边距调整 */
  @media (max-width: 639px) {
    .card-content {
      padding: 1rem;
    }
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    color: var(--gray);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    color: var(--dark);
  }

  /* 移动端标题样式 */
  @media (max-width: 639px) {
    .card-title {
      font-size: 1.125rem; /* 18px */
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }

  .card-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
    /* 确保触摸目标足够大 */
    display: block;
    min-height: 44px;
    display: flex;
    align-items: center;
  }

  .card-title a:hover {
    color: var(--secondary);
  }

  .card-excerpt {
    color: var(--gray);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  @media (max-width: 639px) {
    .card-excerpt {
      font-size: 0.875rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--secondary);
    font-weight: 500;
    text-decoration: none;
    font-size: 0.9375rem;
    min-height: 44px;
    padding: 0.5rem 0;
    transition: opacity 0.2s ease;
  }

  .read-more:hover {
    opacity: 0.8;
  }

  .arrow-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }

  .read-more:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* 移除 popover 脚本自动标记的 internal 链接样式 */
  .article-card a.internal {
    background: transparent !important;
    padding: 0 !important;
    border-radius: 0 !important;
  }

  .article-card h2 a.internal {
    color: var(--dark);
  }

  .article-card a.internal:hover {
    color: var(--secondary);
  }
</style>
