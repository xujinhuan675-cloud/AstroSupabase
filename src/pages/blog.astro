---
/**
 * 博客首页 - 静态生成版本
 * 
 * 优化策略：
 * 1. 构建时获取文章数据
 * 2. 运行时零数据库查询
 * 3. 页面部署到 Edge CDN，全球加速
 */
// 强制静态预渲染（Astro 5.x server 模式下需要显式声明）
export const prerender = true;

import Layout from '../layout/Layout.astro';
import { getArticles } from '../lib/articles';
import ArticleCard from '../components/ArticleCard.astro';
import MainNav from '../components/MainNav.astro';

// 构建时获取文章数据
const articles = await getArticles(6);
---

<Layout title="欢迎来到Openeducation">
  <!-- 主导航栏 -->
  <MainNav />
  
  <main class="min-h-screen py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold sm:text-5xl sm:tracking-tight lg:text-6xl mb-6" style="color: var(--dark);">
          欢迎来到Openeducation
        </h1>
        <p class="text-xl max-w-3xl mx-auto" style="color: var(--gray);">
          分享持续生长的知识网络
        </p>
      </div>

      <!-- Featured Articles -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold mb-8" style="color: var(--dark);">最新文章</h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {articles.map(article => (
            <ArticleCard article={article} />
          ))}
        </div>
      </div>

      <!-- 后台管理入口已隐藏，但仍可通过直接访问 /auth/login 进入 -->
    </div>
  </main>
</Layout>