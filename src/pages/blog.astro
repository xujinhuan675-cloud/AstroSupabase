---
/**
 * 博客首页 - 静态生成版本（移动端优化）
 * 
 * 优化策略：
 * 1. 构建时获取文章数据
 * 2. 运行时零数据库查询
 * 3. 页面部署到 Edge CDN，全球加速
 * 4. 响应式网格布局
 */
export const prerender = true;

import Layout from '../layout/Layout.astro';
import { getArticles } from '../lib/articles';
import ArticleCard from '../components/ArticleCard.astro';
import MainNav from '../components/MainNav.astro';

const articles = await getArticles(6);
---

<Layout title="欢迎来到Openeducation">
  <MainNav />
  
  <main class="blog-main">
    <div class="blog-container">
      <!-- 页面标题 -->
      <header class="blog-header">
        <h1 class="blog-title">欢迎来到Openeducation</h1>
        <p class="blog-subtitle">分享持续生长的知识网络</p>
      </header>

      <!-- 文章列表 -->
      <section class="articles-section">
        <h2 class="section-title">最新文章</h2>
        <div class="articles-grid">
          {articles.map(article => (
            <ArticleCard article={article} />
          ))}
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .blog-main {
    min-height: 100vh;
    padding: 3rem 0;
  }

  @media (max-width: 639px) {
    .blog-main {
      padding: 1.5rem 0;
    }
  }

  .blog-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media (max-width: 639px) {
    .blog-container {
      padding: 0 1rem;
    }
  }

  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  @media (max-width: 639px) {
    .blog-header {
      margin-bottom: 2rem;
    }
  }

  .blog-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--dark);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  @media (max-width: 1023px) {
    .blog-title {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 639px) {
    .blog-title {
      font-size: 1.75rem;
    }
  }

  .blog-subtitle {
    font-size: 1.25rem;
    color: var(--gray);
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 639px) {
    .blog-subtitle {
      font-size: 1rem;
    }
  }

  .articles-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--dark);
    margin: 0 0 2rem 0;
  }

  @media (max-width: 639px) {
    .section-title {
      font-size: 1.25rem;
      margin-bottom: 1.5rem;
    }
  }

  /* 响应式网格布局 */
  .articles-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(3, 1fr);
  }

  /* 平板：双列 */
  @media (max-width: 1023px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  /* 移动端：单列 */
  @media (max-width: 639px) {
    .articles-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
