---
import { getCollection } from 'astro:content';
import Layout from '../layout/Layout.astro';
import { getArticles } from '../lib/articles';
import ArticleCard from '../components/ArticleCard.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

import '@/styles/global.css';

// Get database articles
const articles = await getArticles(3);

// Get Obsidian notes (documents collection)
const allNotes = await getCollection('documents', ({ data }: any) => {
  return data.publish !== false;
});
const recentNotes = allNotes.slice(0, 3);
---

<Layout title="Welcome to Hybrid Blog">
  <ThemeToggle />
  
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 transition-colors">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-5xl font-extrabold text-gray-900 dark:text-gray-100 sm:text-6xl mb-6">
          🌌 Hybrid Knowledge Base
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-8">
          Combining the power of <span class="text-blue-600 dark:text-blue-400 font-semibold">Obsidian vault</span> 
          with <span class="text-indigo-600 dark:text-indigo-400 font-semibold">dynamic articles</span> 
          - the best of both worlds
        </p>
        
        <div class="flex justify-center gap-4 flex-wrap">
          <a href="/vault" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium shadow-md">
            📚 Browse Vault
          </a>
          <a href="/articles" class="px-6 py-3 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition font-medium shadow-md">
            📄 View Articles
          </a>
          <a href="/auth/login" class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-medium shadow-md">
            🔐 Admin Login
          </a>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        
        <!-- Obsidian Vault Notes -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
              📝 Vault Notes
            </h2>
            <a href="/vault" class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">
              View all →
            </a>
          </div>
          
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Static notes from Obsidian vault with wiki-links and tags
          </p>
          
          <div class="space-y-6">
            {recentNotes.length > 0 ? (
              recentNotes.map((note: any) => (
                <article class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
                  <a href={`/vault/${note.id}`} class="block">
                    <div class="flex items-start gap-3 mb-3">
                      <span class="text-2xl">📖</span>
                      <div class="flex-1">
                        <h3 class="text-xl font-semibold text-blue-600 dark:text-blue-400 hover:underline mb-2">
                          {note.data.title || note.id}
                        </h3>
                        {note.data.description && (
                          <p class="text-gray-600 dark:text-gray-400 text-sm">
                            {note.data.description}
                          </p>
                        )}
                      </div>
                    </div>
                    {note.data.tags && note.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-2 mt-3">
                        {note.data.tags.slice(0, 3).map((tag: string) => (
                          <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded text-xs">
                            #{tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </a>
                </article>
              ))
            ) : (
              <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-8 text-center">
                <p class="text-gray-500 dark:text-gray-400">
                  No vault notes yet. Add markdown files to <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded">src/content/vault/</code>
                </p>
              </div>
            )}
          </div>
        </div>

        <!-- Database Articles -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
              📰 Dynamic Articles
            </h2>
            <a href="/dashboard" class="text-indigo-600 dark:text-indigo-400 hover:underline text-sm font-medium">
              Manage →
            </a>
          </div>
          
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Web-managed articles with full CRUD via dashboard
          </p>
          
          <div class="space-y-6">
            {articles.length > 0 ? (
              articles.map(article => (
                <ArticleCard article={article} />
              ))
            ) : (
              <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-8 text-center">
                <p class="text-gray-500 dark:text-gray-400 mb-4">
                  No articles yet. Create your first article via the dashboard!
                </p>
                <a href="/dashboard" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">
                  Go to Dashboard
                </a>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-700 rounded-2xl p-8 md:p-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
          ✨ Why Hybrid?
        </h2>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-4">📝</div>
            <h3 class="font-semibold text-lg text-gray-900 dark:text-gray-100 mb-2">Obsidian Workflow</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Write in Obsidian with wiki-links, backlinks, and your favorite plugins
            </p>
          </div>
          
          <div class="text-center">
            <div class="text-4xl mb-4">🎛️</div>
            <h3 class="font-semibold text-lg text-gray-900 dark:text-gray-100 mb-2">Web Dashboard</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Manage dynamic content anywhere with full WYSIWYG editing
            </p>
          </div>
          
          <div class="text-center">
            <div class="text-4xl mb-4">⚡</div>
            <h3 class="font-semibold text-lg text-gray-900 dark:text-gray-100 mb-2">Lightning Fast</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Astro-powered static generation with hybrid SSR support
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>