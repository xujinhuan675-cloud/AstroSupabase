---
import Layout from '../layout/Layout.astro';
import { getArticles } from '../lib/articles';
import ArticleCard from '../components/ArticleCard.astro';

const articles = await getArticles(6);
---

<Layout title="歡迎來到我的部落格">
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl mb-6">
          歡迎來到我的部落格
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          分享技術見解、生活點滴與學習心得
        </p>
      </div>

      <!-- Featured Articles -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">最新文章</h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {articles.map(article => (
            <ArticleCard article={article} />
          ))}
        </div>
      </div>

      <div>
        <a href="/auth/login" class="bg-indigo-50 border border-indigo-200 rounded-lg p-4 flex items-center gap-3 mb-10 hover:bg-indigo-100 transition w-96">
          <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zM4 20v-1c0-2.21 3.58-4 8-4s8 1.79 8 4v1"/>
          </svg>
          <span class="text-indigo-800 font-medium">管理員後台入口</span>
        </a>
      </div>
    </div>
  </main>
</Layout>