---
/**
 * Landing Page - 欢迎页
 * 参考 https://openeducation.vercel.app/
 * 功能：星空背景 + 知识图谱 + 点击跳转到博客
 */
import { Image } from 'astro:assets';
import '../styles/landing.css';
import LandingGraph from '../components/LandingGraph';
import logo from '../assets/logo.png';

const title = 'I want to learn';
const subtitle = 'Ship your Second Brain into the Cyber-Space';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={subtitle}>
</head>
<body>
  <div class="landing-container">
    <!-- 星空背景 -->
    <div class="stars"></div>
    <div class="twinkling"></div>
    <div class="clouds"></div>

    <!-- 知识图谱 -->
    <div class="graph-container">
      <LandingGraph client:only="react" />
    </div>

    <!-- Logo -->
    <a href="/blog">
      <section class="logo-container">
        <Image
          src={logo}
          alt={title}
          class="logo"
        />
      </section>
    </a>

    <!-- 标题和副标题 -->
    <a href="/blog">
      <section class="title-container">
        <h1 class="title">{title}</h1>
        <p class="subtitle">{subtitle}</p>
      </section>
    </a>
  </div>
</body>
</html>
