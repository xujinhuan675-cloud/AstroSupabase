---
/**
 * Landing Page - 欢迎页
 * 参考 https://openeducation.vercel.app/
 * 功能：星空背景 + 知识图谱 + 点击跳转到博客
 */
// 强制静态预渲染
export const prerender = true;

import '../styles/landing.css';
import '../styles/quartz/variables.css';
import '../styles/quartz/darkmode.css';
import QuartzGraph from '../components/quartz/QuartzGraph';

const title = 'I want to learn';
const subtitle = 'Ship your Second Brain into the Cyber-Space';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <!-- Google Tag Manager -->
  <script is:inline>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-WSSXP26S');
  </script>
  <!-- End Google Tag Manager -->
  
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={subtitle}>
  
  <!-- 防止主题闪烁 -->
  <script is:inline>
    (function() {
      const saved = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = saved || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('saved-theme', theme);
    })();
  </script>
</head>
<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WSSXP26S"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  <div class="landing-container">
    <!-- 星空背景 -->
    <div class="stars"></div>
    <div class="twinkling"></div>
    <div class="clouds"></div>

    <!-- 知识图谱 - 可见时才加载，减少首屏 JS -->
    <div class="graph-container">
      <QuartzGraph 
        client:visible
        isGlobal={true}
        height={600}
        showTitle={false}
        globalGraph={{ depth: -1, enableRadial: true }}
      />
    </div>

    <!-- 火箭图标 - SVG绘制 -->
    <a href="/blog" class="logo-container">
      <svg class="rocket-svg" viewBox="0 0 100 140" xmlns="http://www.w3.org/2000/svg">
        <!-- 火箭主体 - 蓝色渐变 -->
        <defs>
          <linearGradient id="bodyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#6b9dc4"/>
            <stop offset="50%" style="stop-color:#5a8ab8"/>
            <stop offset="100%" style="stop-color:#4a7aa8"/>
          </linearGradient>
          <linearGradient id="windowGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#9b7ed9"/>
            <stop offset="50%" style="stop-color:#8b5cf6"/>
            <stop offset="100%" style="stop-color:#7c3aed"/>
          </linearGradient>
          <linearGradient id="flameGradient" y1="0%" y2="100%">
            <stop offset="0%" style="stop-color:#fbbf24"/>
            <stop offset="50%" style="stop-color:#f97316"/>
            <stop offset="100%" style="stop-color:#ef4444"/>
          </linearGradient>
        </defs>
        
        <!-- 火箭尖端 -->
        <path d="M50 5 L65 35 L35 35 Z" fill="url(#bodyGradient)" stroke="#4a7aa8" stroke-width="1"/>
        
        <!-- 火箭主体 -->
        <path d="M35 35 L35 95 Q35 105 50 105 Q65 105 65 95 L65 35 Z" fill="url(#bodyGradient)" stroke="#4a7aa8" stroke-width="1"/>
        
        <!-- 紫色宝石窗口 -->
        <polygon points="50,40 62,55 50,70 38,55" fill="url(#windowGradient)" stroke="#6d28d9" stroke-width="2"/>
        <polygon points="50,45 57,55 50,65 43,55" fill="#a78bfa" opacity="0.5"/>
        
        <!-- 左侧翼 -->
        <path d="M35 70 L20 100 L35 95 Z" fill="url(#bodyGradient)" stroke="#4a7aa8" stroke-width="1"/>
        
        <!-- 右侧翼 -->
        <path d="M65 70 L80 100 L65 95 Z" fill="url(#bodyGradient)" stroke="#4a7aa8" stroke-width="1"/>
        
        <!-- 火焰 -->
        <ellipse cx="50" cy="120" rx="12" ry="18" fill="url(#flameGradient)" opacity="0.9">
          <animate attributeName="ry" values="18;22;18" dur="0.3s" repeatCount="indefinite"/>
          <animate attributeName="opacity" values="0.9;0.7;0.9" dur="0.3s" repeatCount="indefinite"/>
        </ellipse>
        <ellipse cx="50" cy="118" rx="8" ry="12" fill="#fde047" opacity="0.8">
          <animate attributeName="ry" values="12;15;12" dur="0.25s" repeatCount="indefinite"/>
        </ellipse>
      </svg>
    </a>

    <!-- 标题和副标题 -->
    <a href="/blog" class="title-link">
      <section class="title-section">
        <h1 class="main-title">{title}</h1>
        <p class="main-subtitle">{subtitle}</p>
      </section>
    </a>
  </div>
  
  <!-- Darkmode 脚本 -->
  <script>
    import '../scripts/quartz/darkmode.ts';
  </script>
</body>
</html>

<style>
  /* 整体布局 - 居中显示 */
  .landing-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    position: relative;
  }

  /* 火箭SVG样式 */
  .logo-container {
    position: relative;
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .logo-container:hover {
    transform: scale(1.05);
  }

  .rocket-svg {
    width: 120px;
    height: 168px;
    filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.4));
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .title-link {
    text-decoration: none;
    position: relative;
    z-index: 10;
  }

  .title-section {
    text-align: center;
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .main-title {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(to right, #a855f7, #c084fc, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
    line-height: 1.2;
  }

  .main-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  @media (max-width: 768px) {
    .rocket-svg {
      width: 100px;
      height: 140px;
    }
    
    .main-title {
      font-size: 2rem;
    }
    
    .main-subtitle {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .rocket-svg {
      width: 80px;
      height: 112px;
    }
    
    .main-title {
      font-size: 1.75rem;
    }
    
    .main-subtitle {
      font-size: 0.8rem;
      padding: 0 1rem;
    }
  }
</style>
