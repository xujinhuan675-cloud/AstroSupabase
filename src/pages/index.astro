---
/**
 * Landing Page - 欢迎页
 * 参考 https://openeducation.vercel.app/
 * 功能：星空背景 + 知识图谱 + 点击跳转到博客
 */
// 强制静态预渲染
export const prerender = true;

import '../styles/landing.css';
import '../styles/quartz/variables.css';
import '../styles/quartz/darkmode.css';
import QuartzGraph from '../components/quartz/QuartzGraph';

const title = 'I want to learn';
const subtitle = 'Ship your Second Brain into the Cyber-Space';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <!-- Google Tag Manager -->
  <script is:inline>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-WSSXP26S');
  </script>
  <!-- End Google Tag Manager -->
  
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={subtitle}>
  
  <!-- 防止主题闪烁 -->
  <script is:inline>
    (function() {
      const saved = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = saved || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('saved-theme', theme);
    })();
  </script>
</head>
<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WSSXP26S"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  <div class="landing-container">
    <!-- 星空背景 -->
    <div class="stars"></div>
    <div class="twinkling"></div>
    <div class="clouds"></div>

    <!-- 知识图谱 - 可见时才加载，减少首屏 JS -->
    <div class="graph-container">
      <QuartzGraph 
        client:visible
        isGlobal={true}
        height={600}
        showTitle={false}
        globalGraph={{ depth: -1, enableRadial: true }}
      />
    </div>

    <!-- CSS 火箭图标 -->
    <a href="/blog" class="rocket-link">
      <div class="rocket-container">
        <div class="rocket">
          <div class="rocket-body">
            <div class="rocket-window"></div>
          </div>
          <div class="rocket-fin rocket-fin-left"></div>
          <div class="rocket-fin rocket-fin-right"></div>
          <div class="rocket-flame">
            <div class="flame flame-1"></div>
            <div class="flame flame-2"></div>
            <div class="flame flame-3"></div>
          </div>
        </div>
      </div>
    </a>

    <!-- 标题和副标题 -->
    <a href="/blog" class="title-link">
      <section class="title-container">
        <h1 class="title">{title}</h1>
        <p class="subtitle">{subtitle}</p>
      </section>
    </a>
  </div>
  
  <!-- Darkmode 脚本 -->
  <script>
    import '../scripts/quartz/darkmode.ts';
  </script>
</body>
</html>

<style>
  /* CSS 火箭样式 */
  .rocket-link {
    text-decoration: none;
    display: block;
    position: relative;
    z-index: 10;
  }

  .rocket-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .rocket {
    position: relative;
    width: 60px;
    height: 120px;
    animation: float 3s ease-in-out infinite;
  }

  .rocket-body {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 80px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
    border-radius: 50% 50% 30% 30% / 60% 60% 40% 40%;
    box-shadow: 
      inset -5px 0 15px rgba(0,0,0,0.2),
      0 0 20px rgba(139, 92, 246, 0.5);
  }

  .rocket-body::before {
    content: '';
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 12px solid transparent;
    border-right: 12px solid transparent;
    border-bottom: 25px solid #6366f1;
  }

  .rocket-window {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 16px;
    height: 16px;
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    border-radius: 50%;
    border: 2px solid #4f46e5;
    box-shadow: inset 2px 2px 4px rgba(255,255,255,0.5);
  }

  .rocket-fin {
    position: absolute;
    bottom: 35px;
    width: 0;
    height: 0;
  }

  .rocket-fin-left {
    left: 0;
    border-top: 20px solid transparent;
    border-right: 15px solid #8b5cf6;
    border-bottom: 10px solid transparent;
  }

  .rocket-fin-right {
    right: 0;
    border-top: 20px solid transparent;
    border-left: 15px solid #8b5cf6;
    border-bottom: 10px solid transparent;
  }

  .rocket-flame {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 2px;
  }

  .flame {
    width: 8px;
    border-radius: 0 0 50% 50%;
    animation: flicker 0.15s ease-in-out infinite alternate;
  }

  .flame-1 {
    height: 25px;
    background: linear-gradient(to bottom, #fbbf24, #f97316, #ef4444);
    animation-delay: 0s;
  }

  .flame-2 {
    height: 35px;
    background: linear-gradient(to bottom, #fde047, #fbbf24, #f97316);
    animation-delay: 0.05s;
  }

  .flame-3 {
    height: 25px;
    background: linear-gradient(to bottom, #fbbf24, #f97316, #ef4444);
    animation-delay: 0.1s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes flicker {
    0% {
      opacity: 1;
      transform: scaleY(1);
    }
    100% {
      opacity: 0.8;
      transform: scaleY(0.9);
    }
  }

  .title-link {
    text-decoration: none;
    position: relative;
    z-index: 10;
  }

  .title-container {
    text-align: center;
    padding: 1rem 2rem;
  }

  .title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #c084fc;
    margin: 0 0 0.5rem 0;
    text-shadow: 0 0 20px rgba(192, 132, 252, 0.5);
  }

  .subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  @media (max-width: 768px) {
    .rocket {
      width: 50px;
      height: 100px;
    }
    
    .rocket-body {
      width: 32px;
      height: 64px;
    }
    
    .rocket-body::before {
      border-left: 10px solid transparent;
      border-right: 10px solid transparent;
      border-bottom: 20px solid #6366f1;
    }
    
    .rocket-window {
      width: 12px;
      height: 12px;
      top: 16px;
    }
    
    .title {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 0.875rem;
    }
  }
</style>
