---
/**
 * Landing Page - 欢迎页
 * 参考 https://openeducation.vercel.app/
 * 功能：星空背景 + 知识图谱 + 点击跳转到博客
 */
// 强制静态预渲染
export const prerender = true;

import '../styles/landing.css';
import '../styles/quartz/variables.css';
import '../styles/quartz/darkmode.css';
import QuartzGraph from '../components/quartz/QuartzGraph';

const title = 'I want to learn';
const subtitle = 'Ship your Second Brain into the Cyber-Space';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <!-- Google Tag Manager -->
  <script is:inline>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-WSSXP26S');
  </script>
  <!-- End Google Tag Manager -->
  
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={subtitle}>
  
  <!-- 防止主题闪烁 -->
  <script is:inline>
    (function() {
      const saved = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = saved || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('saved-theme', theme);
    })();
  </script>
</head>
<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WSSXP26S"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  <div class="landing-container">
    <!-- 星空背景 -->
    <div class="stars"></div>
    <div class="twinkling"></div>
    <div class="clouds"></div>

    <!-- 知识图谱 - 可见时才加载，减少首屏 JS -->
    <div class="graph-container">
      <QuartzGraph 
        client:visible
        isGlobal={true}
        height={600}
        showTitle={false}
        globalGraph={{ depth: -1, enableRadial: true }}
      />
    </div>

    <!-- 火箭图标 - 使用原始图片 -->
    <a href="/blog" class="logo-container">
      <img src="/src/assets/logo.png" alt="火箭" class="logo" />
    </a>

    <!-- 标题和副标题 -->
    <a href="/blog" class="title-link">
      <section class="title-container">
        <h1 class="title">{title}</h1>
        <p class="subtitle">{subtitle}</p>
      </section>
    </a>
  </div>
  
  <!-- Darkmode 脚本 -->
  <script>
    import '../scripts/quartz/darkmode.ts';
  </script>
</body>
</html>

<style>
  /* 火箭图片样式 - 缩小比例 */
  .logo-container {
    position: relative;
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .logo-container:hover {
    transform: scale(1.05);
  }

  .logo {
    height: 25vh;
    max-height: 200px;
    width: auto;
    filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.4));
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .title-link {
    text-decoration: none;
    position: relative;
    z-index: 10;
  }

  .title-container {
    text-align: center;
    padding: 1rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .title {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(to right, #a855f7, #c084fc, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
    text-shadow: 0 0 30px rgba(168, 85, 247, 0.5);
  }

  .subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0.5rem 0 0 0;
  }

  @media (max-width: 768px) {
    .logo {
      height: 18vh;
      max-height: 150px;
    }
    
    .title {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .logo {
      height: 15vh;
      max-height: 120px;
    }
    
    .title {
      font-size: 1.75rem;
    }
    
    .subtitle {
      font-size: 0.8rem;
    }
  }
</style>
