---
/**
 * 学科分类文章列表页
 * 显示特定学科的所有文章
 */
import Layout from '../../layout/Layout.astro';
import MainNav from '../../components/MainNav.astro';
import { getArticles } from '../../lib/articles';
import ArticleCard from '../../components/ArticleCard.astro';
import { getCategoryInfo, isValidCategory } from '../../lib/categories';

const { category: categoryParam } = Astro.params;

// 验证分类参数
if (!categoryParam || !isValidCategory(categoryParam)) {
  return Astro.redirect('/404');
}

const category = categoryParam;
const currentCategory = getCategoryInfo(category);

if (!currentCategory) {
  return Astro.redirect('/404');
}

// 根据分类获取文章
const articles = await getArticles(undefined, category);
---

<Layout title={`${currentCategory.name} - 学科分类`}>
  <!-- 主导航栏 -->
  <MainNav />
  
  <main class="min-h-screen py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- 分类标题 -->
      <div class="mb-12">
        <a href="/categories" class="back-link">
          ← 返回所有分类
        </a>
        
        <div class="category-header">
          <div class="category-icon-large">{currentCategory.icon}</div>
          <div>
            <h1 class="category-title">{currentCategory.name}</h1>
            <p class="category-description">{currentCategory.description}</p>
            <p class="article-count">{articles.length} 篇文章</p>
          </div>
        </div>
      </div>

      <!-- 文章网格 -->
      {articles.length > 0 ? (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {articles.map(article => (
            <ArticleCard article={article} />
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>该分类暂无文章</p>
          <a href="/blog" class="btn-primary">浏览所有文章</a>
        </div>
      )}
    </div>
  </main>
</Layout>

<style>
  .back-link {
    display: inline-block;
    color: var(--secondary);
    text-decoration: none;
    margin-bottom: 2rem;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .category-icon-large {
    font-size: 5rem;
  }

  .category-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 0.5rem;
  }

  .category-description {
    font-size: 1.25rem;
    color: var(--gray);
    margin-bottom: 0.5rem;
  }

  .article-count {
    font-size: 1rem;
    color: var(--darkgray);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-state p {
    font-size: 1.25rem;
    color: var(--gray);
    margin-bottom: 2rem;
  }

  .btn-primary {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: var(--secondary);
    color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  .btn-primary:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .category-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .category-icon-large {
      font-size: 3rem;
    }

    .category-title {
      font-size: 2rem;
    }
  }
</style>

